@model FundsLibrary.InterviewTest.Common.FundManager

@{
    ViewBag.Title = "Add";
}

<h2>Add Fund Manager</h2>
<br />

@Html.ValidationSummary()

@using (Html.BeginForm("Add", "FundManager"))
{

    <div class="form-group row">
        @Html.LabelFor(x => x.Name, "Name", new { @class = "col-sm-2" })
        @Html.TextBoxFor(x => x.Name, new { @class = "col-sm-4" })
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.ManagedSince, "Managed since", new { @class = "col-sm-2" })
        @Html.TextBoxFor(x => x.ManagedSince, new { @class = "col-sm-4", type = "date" })
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Location, "Location", new { @class = "col-sm-2" })
        @Html.EnumDropDownListFor(x => x.Location, new { @class = "col-sm-2" })
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Biography, "Biography", new { @class = "col-sm-2" })
        @Html.TextBoxFor(x => x.Biography, new { @class = "col-sm-4" })
    </div>

    <div class="row">
        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default pull-left col-sm-1" })
        <span class="col-sm-4"></span>
        <button type="submit" class="btn btn-success pull-center col-sm-1">Submit</button>
    </div>
}
