@model IEnumerable<FundsLibrary.InterviewTest.Web.Models.UserModel>

@{
    ViewBag.Title = "UserDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Details</h2>

<div class="fund-manager-details">
    <div class="row">
        <table class="table-striped sm-col-4">
            <thead>
                <tr>
                    <th width="40px;"></th>
                    <th width="300px;">Username</th>
                    <th width="300px;">Email Address</th>
                    <th width="300px;">Registered Since</th>
                    <th width="300px;">Id</th>
                    <th width="40px;"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td><span class="glyphicon glyphicon-user"></span></td>
                        <td>@user.Username</td>
                        <td>@user.EmailAddress</td>
                        <td>@user.RegisteredSince</td>
                        <td>@user.Id</td>
                        <td><a href="@Url.Action("Delete", new {Id = user.Id})" class="btn btn-default"><span class="glyphicon glyphicon-trash"></span></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

